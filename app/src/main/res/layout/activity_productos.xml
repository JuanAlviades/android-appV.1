<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAAFA2"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="384dp"
        android:layout_height="142dp"
        android:layout_marginStart="40sp"
        android:layout_marginTop="40sp"
        android:paddingBottom="40sp"
        android:text="Productos Destacados"
        android:textColor="#000000"
        android:textFontWeight="600"
        android:textSize="45dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_weight="1"
            tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Título Producto"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textFontWeight="600"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="237dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="20sp"
                    android:textColor="#000000"
                    android:textFontWeight="600"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed eleifend tellus nec ligula suscipit commodo." />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="20sp"
                        android:layout_weight="1"
                        android:backgroundTint="#AF7564"
                        android:text="Agregar al carrito"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewespacio1"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginStart="40sp"
        android:paddingBottom="40sp"
        android:text="Productos Destacados" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="259dp"
            android:layout_height="wrap_content"
